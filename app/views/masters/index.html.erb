<h1>WELCOME MASTERS!</h1>

<% if @pokemon %>
Pokemon: <%= @pokemon.name %><br>
<%= image_tag(@pokemon.img height: '100', width: '100')%><br>

<% end %>

 <table>
  <tr>
    <th>Master</th>
    <th>ID</th>
  </tr>

<% @masters.each do |master| %>
    <tr>
      <td><%= link_to master.name, master_path(master) %></td>
      <td><%= master.id %></td>
      <td><%= link_to 'Edit', edit_master_path(master) %></td>
      <td><%= link_to 'Delete', master_path(master), 
      method: :delete, 
      data: { confirm: 'Are You Sure You Want to Delete?'} %></td>
    </tr>
<% end %>

